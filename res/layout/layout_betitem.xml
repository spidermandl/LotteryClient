<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:background="@drawable/shape_card"
        >
    <LinearLayout android:layout_width="match_parent" android:layout_height="48dp" android:orientation="horizontal">
        <ImageView android:layout_width="48dp" android:layout_height="48dp"
                   android:id="@+id/ivLogo"/>
        <TextView android:layout_width="wrap_content" android:layout_height="48dp" android:textSize="18dp"
                  android:id="@+id/tvTitle"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="?android:attr/listDivider"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="32dp"
                  android:orientation="horizontal">
        <TextView android:layout_width="100dp" android:layout_height="match_parent" android:textSize="12dp"
                  android:gravity="right" android:text="近期开奖：" android:singleLine="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:textSize="12dp"
                  android:gravity="left" android:id="@+id/tvLastDraw" android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="24dp"
                  android:orientation="horizontal">
        <TextView android:layout_width="100dp" android:layout_height="match_parent" android:textSize="12dp"
                  android:gravity="right" android:text="下期开奖时间：" android:singleLine="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:textSize="12dp"
                  android:gravity="left" android:textColor="@color/red" android:id="@+id/tvNextTime" android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>