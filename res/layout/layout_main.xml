<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.evstudio.thefirstlottery.mobile"
        xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivJoinBar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon_new_backupground_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/btm_btn_wdcp_up" />

            <TextView
                android:id="@+id/tvBtnLogin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="登录/注册"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btnCharge"
                    style="@style/BootstrapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btnGetMoney"
                    android:background="@drawable/button_background_states"
                    android:text="充值"
                    app:bb_size="xsmall"
                    app:bb_text_gravity="center"
                    bootstrapbutton:bb_roundedCorners="false"
                    bootstrapbutton:bb_type="danger" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btnGetMoney"
                    style="@style/BootstrapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现"
                    app:bb_size="xsmall"
                    app:bb_text_gravity="center"
                    bootstrapbutton:bb_roundedCorners="false"
                    bootstrapbutton:bb_type="info" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="44dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="热门彩票"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <com.evstudio.thefirstlottery.mobile.view.NoScrollGridView
            android:id="@+id/gvMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="columnWidth"></com.evstudio.thefirstlottery.mobile.view.NoScrollGridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="44dp"
                android:background="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="近期开奖"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/sh11x5ViewBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/app_icon_new_01" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvLastDraw"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/dltViewBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dltLogo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/app_icon_new_03" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dltKaijiang"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="第15001期：08，09，19，27，30 | 06，07"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</ScrollView>