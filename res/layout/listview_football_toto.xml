<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/list_ft_sfp_card"
    android:padding="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:orientation="vertical" android:background="@drawable/footselectitembg">
        <TextView android:layout_width="match_parent" android:layout_height="16dp" android:textSize="18sp"
            android:text="1" android:gravity="center" android:id="@+id/tvTotoGameDayNumber"/>
        <TextView android:layout_width="match_parent" android:layout_height="32dp" android:textSize="18sp"
            android:text="欧冠" android:gravity="center" android:id="@+id/tvTotoMatch"/>
        <TextView android:layout_width="match_parent" android:layout_height="16dp" android:textSize="12sp"
            android:text="2014-12-20" android:gravity="center" android:id="@+id/tvTotoTime"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="64dp" android:orientation="horizontal"
        android:background="@drawable/footselectitembg"
        >
        <LinearLayout android:layout_width="match_parent" android:layout_height="64dp" android:orientation="vertical"  android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="32dp" android:id="@+id/tvTotoHost"
                android:text="" android:textSize="14sp" android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="32dp"
                android:background="@drawable/footselectitembg" android:id="@+id/tvTotoPl3"
                android:text="" android:gravity="center"
                android:textSize="14sp" android:clickable="true"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="64dp" android:orientation="vertical"  android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="32dp"
                android:text="VS" android:textSize="14sp" android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="32dp"
                android:background="@drawable/footselectitembg" android:id="@+id/tvTotoPl1"
                android:text="平" android:gravity="center"
                android:textSize="14sp" android:clickable="true"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="64dp" android:orientation="vertical" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="32dp" android:id="@+id/tvTotoClient"
                android:text="" android:textSize="14sp" android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="32dp"
                android:background="@drawable/footselectitembg" android:id="@+id/tvTotoPl0"
                android:text="" android:gravity="center"
                android:textSize="14sp" android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>