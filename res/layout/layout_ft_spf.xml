<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res/com.evstudio.thefirstlottery.mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/lvGameListSpf" android:layout_above="@+id/lySubmitSfp"
              android:divider="@null"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:dividerHeight="15dp"
              android:scrollbarStyle="outsideOverlay"
            ></ListView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="56dp"
                  android:id="@+id/lySubmitSfp" android:orientation="horizontal"
                  android:layout_alignParentBottom="true">
        <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bbtnSfp"
                style="@style/BootstrapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bootstrapbutton:bb_roundedCorners="false"
                android:text="投注"
                app:bb_text_gravity="center"
                app:bb_size="small"
                bootstrapbutton:bb_type="success"
                android:layout_gravity="center_vertical"
                />
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/txSfpTip"
                  android:text="已选中0场比赛" android:textSize="16sp" android:layout_gravity="center_vertical"
                  android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>